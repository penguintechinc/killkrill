[bandit]
# Bandit configuration for killkrill

# Skip tests that are intentional or false positives
# B101: assert_used - We use asserts in tests
# B104: hardcoded_bind_all_interfaces - Intentional for Docker containers (0.0.0.0 binding)
# B106: hardcoded_password_funcarg - Empty string placeholders are not passwords
# B108: probable_insecure_temp - PyDAL migration folder usage is controlled
# B311: random - Used for retry jitter, not cryptography
# B404: import_subprocess - Required for XDP and system management
# B603: subprocess_without_shell_equals_true - Intentional for system commands
# B601: paramiko_calls - Not applicable to this project
# B607: start_process_with_partial_path - System commands in PATH
skips = B101,B104,B106,B108,B311,B404,B601,B603,B607

# Exclude test files and vendored code
exclude_dirs = /tests/,/test_,/.venv/,/venv/,/node_modules/

{
  "name": "project-template",
  "version": "1.0.0",
  "description": "PenguinTech project template with multi-language support",
  "main": "web/src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd web && npm run dev",
    "dev:api": "nodemon web/src/server.js",
    "build": "npm run build:web",
    "build:web": "cd web && npm run build",
    "start": "node web/src/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t project-template:latest .",
    "docker:run": "docker run -p 3000:3000 project-template:latest",
    "license:validate": "node scripts/validate-license.js",
    "version:update": "./scripts/version/update-version.sh"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.7.0",
    "pg": "^8.12.0",
    "winston": "^3.14.2",
    "joi": "^17.13.3",
    "axios": "^1.7.7",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.10",
    "@types/jest": "^29.5.14",
    "@playwright/test": "^1.48.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "supertest": "^7.0.0"
  },
  "keywords": [
    "penguintech",
    "template",
    "enterprise",
    "licensing",
    "multi-language"
  ],
  "author": "Penguin Tech Inc",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/penguintechinc/project-template"
  },
  "bugs": {
    "url": "https://github.com/penguintechinc/project-template/issues"
  }
}